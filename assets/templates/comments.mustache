<div class="row">
    <div class="panel panel-default widget" style="margin-left:13px;margin-right:13px">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-comment"></span>
            <h3 class="panel-title">Recent Comments</h3>
            <span class="label label-info">{{result.length}}</span>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                {{#result}}
                <li class="list-group-item">
                    <div class="row">

                        <div class="col-xs-10 col-md-11">
                            <div>
                                <a href="{{pageUrl}}">{{pageTitle}}</a>
                                <div class="mic-info"> By: <a href="mailto:{{mail}}">{{name}}</a> on {{keen.timestamp}}
                                </div>
                            </div>
                            <div class="comment-text">{{message}}</div>
                        </div>
                    </div>
                </li>
                {{/result}}
            </ul>
            <a href="#" class="btn btn-primary btn-sm btn-block" role="button"><span class="glyphicon glyphicon-refresh"></span> More</a>
        </div>
    </div>
</div>