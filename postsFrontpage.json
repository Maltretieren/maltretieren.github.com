---
layout: none
---
[{% for post in site.categories.frontpage %}{
    "Date": "{{ post.date | date_to_string }}",
    "Title": "{{ post.title }}",
	"Url": "{{ post.url}}",
    "Preview": "{{ post.preview  }}",
	"PreviewText": "{{ post.content | strip_html | truncatewords:60 }} ",
    "TagsSentence": "{{post.tags | array_to_sentence_string}}",
	"Tags": 
		[{% for tag in post.tags %}
			"{{tag}}"
		{% if forloop.rindex0 > 0 %},{% endif %}{% endfor %}]
}{% if forloop.rindex0 > 0 %},{% endif %} | json {% endfor %}]