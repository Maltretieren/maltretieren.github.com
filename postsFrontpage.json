---
layout: none
---
[{% for post in site.posts %}
    {% if post.frontpage == true %}
		{% if forloop.rindex0 > 0 && forloop.rindex0 != site.posts.length %},{% endif %}
		{
		"Date": "{{ post.date | date_to_string }}",
		"Title": "{{ post.title }}",
		"Url": "{{ post.url}}",
		"Preview": "{{ post.preview  }}",
		"PreviewText": "{{ post.content | strip_html | truncatewords:60 | strip_newlines }}  ",
		"TagsSentence": "{{post.tags | array_to_sentence_string}}",
		"Tags": 
			[{% for tag in post.tags %}
				"{{tag}}"
			{% endfor %}]
		}
	{% endif %}
{% endfor %}]
	